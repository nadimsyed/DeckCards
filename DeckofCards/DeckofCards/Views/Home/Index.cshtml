<table class="table table-bordered table-striped" @*onload="~/Home/Draw/"*@>
    <tr>
        <th width="70%">Image</th>
        <th width="30%">Name</th>
    </tr>
    @for (int i = 0; i < ViewBag.Cards.Count; i++)
    {
        <tr>
            <td>
                <img src="@ViewBag.Cards[i]["image"]"
                     height="440" width="350" />
            </td>
            <td>
                @ViewBag.Cards[i]["value"] OF @ViewBag.Cards[i]["suit"]
            </td>
        </tr>
    }
</table>

